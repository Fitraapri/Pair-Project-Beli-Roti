<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <center>

        <table border="1">
            <thead>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Date Created</th>
            </thead>
            <tbody>
                <% users.forEach(e=> { %>
                    <tr>
                        <td>

                            <%= e.username %>


                        </td>
                        <td>

                            <%= e.email %>

                        </td>
                        <td>

                            <%= e.role %>
                        </td>
                        <td>
                            <%= e.createdAt %>
                        </td>
                        <td>

                            <% if (e.role=='pending' || e.role=='customer' ) { %>
                                <a href="/admin/acceptrequest/<%=e.id%>">
                                    <% if (e.role=='pending' ) { %>

                                        <button>Accept Admin Request</button>
                                </a>
                                <% } %>
                                    <% if (e.role=='customer' ) { %>
                                        <button>Make Admin</button></a>
                                        <% } %>
                                            <% } %>
                                                <% if (e.role=='admin' ) { %>
                                                    <a href="/admin/revoke/<%=e.id%>"><button>Revoke
                                                            Access</button></a>
                                                    <% } %>
                                                        <a href="/admin/delete/<%=e.id%>"><button>Delete</button></a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </center>

</body>

</html>
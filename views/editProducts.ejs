<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <center>
        <table border="1">
            <thead>
                <th>Product Name</th>
                <th>Price</th>
                <th>Date Created</th>
                <th>Stock</th>
                <th>Action</th>
            </thead>
            <tbody>
                <% products.forEach(e=> { %>
                    <tr>
                        <td>
                            <%= e.Product.name %>
                        </td>
                        <td>
                            <%= e.Product.formattedPrice() %>
                        </td>
                        <td>
                            <%= e.dateFormat %>
                        </td>
                        <td>
                            <% if(e.Product.stock> 0){ %>
                                <p>
                                    <%= e.Product.stock %>
                                </p>
                                <% } else{ %>
                                    <p>
                                        kosong ngab :(
                                    </p>
                                    <% } %>
                        </td>
                        <td>
                            <a href="/admin/editproducts/<%= e.id %>"><button>Edit</button></a>
                            <a href="/admin/deleteproduct/<%=e.id%>"><button>Delete</button></a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </center>
</body>

</html>